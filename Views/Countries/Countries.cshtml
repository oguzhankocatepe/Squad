@model IEnumerable<Squad.Models.Country>

@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>

<table class="table">
    <tbody>
            @{
            
             int count = 0;
             <tr>
                 @foreach (var item in Model) {
               
                    <td>
                        <img src="@Html.Encode(item.Picture)" /><br>
                        @Html.ActionLink(item.Name, "Players", "Players", new { id = item.Code , code = item.Code })
                    </td>
               
                    @if (++count % 8 == 0){
                    <tr>
                    </tr>
                    }
                }
             </tr>
            }
    </tbody>
</table>
